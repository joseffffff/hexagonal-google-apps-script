{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": false
  },
  "exclude": [
    "node_modules/**"
  ]
}
